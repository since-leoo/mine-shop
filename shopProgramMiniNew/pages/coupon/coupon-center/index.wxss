page {
  background-color: #f5f5f5;
  height: 100%;
}

.coupon-center {
  padding: 24rpx 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
}

.loading-wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx;
}

.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 24rpx;
}

.coupon-list {
  display: flex;
  flex-direction: column;
}

.coupon-item {
  margin-bottom: 20rpx;
}
