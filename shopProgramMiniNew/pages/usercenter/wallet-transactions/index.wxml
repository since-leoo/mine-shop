<view class="transaction-page">
  <!-- 列表区域 -->
  <view wx:if="{{list.length > 0}}" class="transaction-list">
    <view
      wx:for="{{list}}"
      wx:key="id"
      class="transaction-item"
    >
      <view class="transaction-info">
        <view class="transaction-header">
          <text class="transaction-type-label">{{item.typeLabel}}</text>
          <text wx:if="{{item.source}}" class="transaction-source">{{item.source}}</text>
        </view>
        <view class="transaction-time">{{item.createdAt}}</view>
      </view>
      <view class="transaction-amount {{item.amount >= 0 ? 'amount-positive' : 'amount-negative'}}">
        {{item.amountText}}
      </view>
    </view>
  </view>

  <!-- 空状态 -->
  <view wx:if="{{!loading && list.length === 0}}" class="empty-wrapper">
    <t-empty description="暂无记录" />
  </view>

  <!-- 加载中 -->
  <view wx:if="{{loading}}" class="loading-wrapper">
    <t-loading theme="circular" size="40rpx" text="加载中..." />
  </view>

  <!-- 没有更多 -->
  <view wx:if="{{!hasMore && list.length > 0}}" class="no-more">
    没有更多了
  </view>
</view>
