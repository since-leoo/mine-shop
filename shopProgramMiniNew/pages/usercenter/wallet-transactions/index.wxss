page {
  background-color: #f5f5f5;
}

.transaction-page {
  padding: 20rpx 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.transaction-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx;
  position: relative;
}

.transaction-item::after {
  content: '';
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 1rpx;
  background-color: #eee;
}

.transaction-item:last-child::after {
  display: none;
}

.transaction-info {
  flex: 1;
  overflow: hidden;
}

.transaction-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.transaction-type-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex-shrink: 0;
}

.transaction-source {
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.transaction-time {
  font-size: 24rpx;
  color: #999;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 500;
  flex-shrink: 0;
  margin-left: 20rpx;
}

.amount-positive {
  color: #fa4126;
}

.amount-negative {
  color: #333;
}

.empty-wrapper {
  padding-top: 200rpx;
}

.loading-wrapper {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 30rpx 0;
}
