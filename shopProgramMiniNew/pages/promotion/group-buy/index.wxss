page {
  background: #f5f5f5;
}

/* ===== Banner ===== */
.banner {
  position: relative;
  background: linear-gradient(135deg, #ff6d00 0%, #ff8f00 50%, #ffb74d 100%);
  padding: 40rpx 32rpx 60rpx;
  overflow: hidden;
}

.banner__bg {
  position: absolute;
  top: -60rpx;
  right: -40rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

.banner__deco {
  position: absolute;
  bottom: -30rpx;
  left: 60rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.06);
}

.banner__content {
  position: relative;
  z-index: 1;
}

.banner__title-row {
  display: flex;
  flex-direction: column;
}

.banner__title {
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: 2rpx;
}

.banner__sub {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

.banner__countdown {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
}

.banner__cd-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 12rpx;
}

.banner__cd-block {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.35);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  padding: 0 6rpx;
}

.banner__cd-sep {
  color: #fff;
  font-weight: 700;
  margin: 0 4rpx;
  font-size: 24rpx;
}

/* ===== Loading / Empty ===== */
.loading-wrap {
  display: flex;
  justify-content: center;
  padding-top: 160rpx;
  color: #ff8f00;
}

.empty-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 200rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* ===== Product List ===== */
.product-list {
  padding: 20rpx 24rpx;
  margin-top: -30rpx;
  position: relative;
  z-index: 2;
}

.product-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.product-card__img-wrap {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  flex-shrink: 0;
}

.product-card__img {
  width: 240rpx;
  height: 240rpx;
}

.product-card__badge {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #ff6d00, #ff8f00);
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 16rpx;
  border-radius: 0 0 16rpx 0;
}

.product-card__info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  min-width: 0;
}

.product-card__title {
  font-size: 28rpx;
  color: #222;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
}

.product-card__price-row {
  display: flex;
  align-items: baseline;
  margin-top: 12rpx;
}

.product-card__group-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 20rpx;
  color: #ff6d00;
  font-weight: 600;
  margin-right: 6rpx;
  background: #fff3e0;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #e65100;
}

.product-card__origin-price {
  font-size: 22rpx;
  color: #bbb;
  text-decoration: line-through;
  margin-left: 12rpx;
}

.product-card__action {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.product-card__btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #ff6d00, #ff8f00);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 28rpx;
}
