page {
  background: #f5f5f5;
}

/* ===== Header Banner ===== */
.header {
  position: relative;
  overflow: hidden;
}

.header__bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ff6d00 0%, #ff8f00 50%, #ffb74d 100%);
}

.header__circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
}

.header__circle--1 {
  width: 300rpx;
  height: 300rpx;
  top: -80rpx;
  right: -60rpx;
}

.header__circle--2 {
  width: 200rpx;
  height: 200rpx;
  bottom: -40rpx;
  left: 40rpx;
  background: rgba(255, 255, 255, 0.05);
}

.header__body {
  position: relative;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 48rpx;
}

.header__left {
  display: flex;
  flex-direction: column;
}

.header__title {
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
  letter-spacing: 2rpx;
}

.header__desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

.header__right {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header__cd-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.header__cd-row {
  display: flex;
  align-items: center;
}

.cd-block {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.35);
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  border-radius: 8rpx;
  padding: 0 6rpx;
}

.cd-day {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 6rpx;
}

.cd-sep {
  color: #fff;
  font-weight: 700;
  margin: 0 4rpx;
  font-size: 24rpx;
}

/* ===== Loading / Empty ===== */
.state-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  color: #ff8f00;
}

.state-wrap--empty {
  color: #ccc;
}

.state-text {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* ===== Product Grid ===== */
.product-scroll {
  height: calc(100vh - 260rpx);
}

.product-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx 20rpx 40rpx;
  margin-top: -20rpx;
  position: relative;
  z-index: 2;
}

/* ===== Card ===== */
.card {
  width: 345rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.06);
}

.card__img-box {
  position: relative;
  width: 345rpx;
  height: 345rpx;
}

.card__img {
  width: 345rpx;
  height: 345rpx;
}

.card__tag {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #ff6d00, #ff8f00);
  color: #fff;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 16rpx;
  border-radius: 0 0 16rpx 0;
}

.card__body {
  padding: 16rpx 16rpx 20rpx;
}

.card__title {
  font-size: 26rpx;
  color: #222;
  font-weight: 500;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.4;
  height: 72rpx;
}

/* ===== Price Row ===== */
.card__price-row {
  display: flex;
  align-items: baseline;
  margin-top: 12rpx;
}

.card__group-price {
  display: flex;
  align-items: baseline;
}

.gp-sym {
  font-size: 22rpx;
  color: #e65100;
  font-weight: 700;
}

.gp-int {
  font-size: 40rpx;
  font-weight: 800;
  color: #e65100;
  line-height: 1;
}

.gp-dec {
  font-size: 22rpx;
  color: #e65100;
  font-weight: 700;
}

.card__origin {
  font-size: 22rpx;
  color: #bbb;
  text-decoration: line-through;
  margin-left: 8rpx;
}

/* ===== Footer: sold + button ===== */
.card__footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 12rpx;
}

.card__sold {
  font-size: 22rpx;
  color: #999;
}

.card__btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 52rpx;
  padding: 0 24rpx;
  background: linear-gradient(135deg, #ff6d00, #ff8f00);
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 26rpx;
}
