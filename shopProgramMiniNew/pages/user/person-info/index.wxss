:host {
  background-color: #f5f5f5;
}
page view {
  box-sizing: border-box;
}
.person-info {
  padding-top: 20rpx;
}

.person-info__wrapper {
  width: 100%;
  padding: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  position: fixed;
  bottom: 0;
  left: 0;
}

.avatarUrl {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% !important;
  overflow: hidden;
}

.avatar-placeholder {
  color: #bbb;
  font-size: 26rpx;
}

.t-class-confirm {
  color: #fa550f !important;
}

.person-info .order-group__left {
  margin-right: 0;
}
.person-info .t-cell-class {
  height: 112rpx;
}

/* 昵称行内输入框 */
.nickname-inline-input {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  min-width: 300rpx;
  border-bottom: 2rpx solid #ddd;
  padding: 4rpx 0;
}

/* 手机号行内输入框 */
.phone-inline-input {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  min-width: 300rpx;
  border-bottom: 2rpx solid #ddd;
  padding: 4rpx 0;
}

/* 手机号区域 */
.phone-note-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.phone-note-inner {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 微信授权手机号按钮 */
.wx-phone-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 8rpx;
  padding: 4rpx 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  border: none;
  margin: 0;
}

.wx-phone-btn::after {
  border: none;
}

/* ===== 自定义头像选择底部弹窗 ===== */
.avatar-sheet {
  background-color: #f5f5f5;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
}

.avatar-sheet__preview {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0 20rpx;
  background-color: #fff;
}

.avatar-sheet__preview-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.avatar-sheet__preview-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-sheet__item {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  padding: 28rpx 0;
  background-color: #fff;
}

.avatar-sheet__item:active {
  background-color: #f0f0f0;
}

.avatar-sheet__divider {
  height: 1rpx;
  background-color: #eee;
}

.avatar-sheet__gap {
  height: 16rpx;
  background-color: #f5f5f5;
}

.avatar-sheet__cancel {
  color: #999;
}
