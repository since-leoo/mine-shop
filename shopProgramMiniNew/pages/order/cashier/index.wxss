.cashier {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* loading 状态 */
.cashier-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 300rpx;
}

.cashier-loading__text {
  margin-top: 32rpx;
  font-size: 32rpx;
  color: #333;
}

.cashier-loading__tip {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

/* 失败状态 */
.cashier-fail {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 300rpx;
}

.cashier-fail__text {
  margin-top: 24rpx;
  font-size: 30rpx;
  color: #333;
}

.cashier-fail__btn {
  margin-top: 48rpx;
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  border: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #666;
}

/* 金额 */
.cashier-amount {
  background: #fff;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cashier-amount__label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.cashier-amount__price {
  font-size: 56rpx;
  color: #333;
  font-weight: bold;
}

/* 支付方式 */
.cashier-methods {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 32rpx;
}

.cashier-method {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.cashier-method:last-child {
  border-bottom: none;
}

.cashier-method--disabled {
  opacity: 0.4;
}

.cashier-method__left {
  display: flex;
  align-items: center;
}

.cashier-method__name {
  margin-left: 16rpx;
  font-size: 30rpx;
  color: #333;
}

.cashier-method__tip {
  font-size: 24rpx;
  color: #999;
}

/* 底部按钮 */
.cashier-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
}

.cashier-btn {
  height: 88rpx;
  background: #FF5F15;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
}

.cashier-btn--disabled {
  opacity: 0.6;
  pointer-events: none;
}
