:host {
  background-color: #f5f5f5;
}
page view {
  box-sizing: border-box;
}
.person-info {
  padding-top: 20rpx;
  padding-bottom: 160rpx;
}

.person-info__authorize-card {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff8f0;
  border-radius: 16rpx;
  margin: 0 24rpx 24rpx;
  padding: 24rpx 32rpx;
}

.person-info__authorize-tip {
  font-size: 26rpx;
  color: #999;
}

/* 头像选择按钮 */
.avatar-cell {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.avatar-button {
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  line-height: 1;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
  border-radius: 50%;
}

.avatar-button::after {
  border: none;
}

.avatar-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: block;
}

/* 昵称输入框 */
.nickname-input {
  text-align: right;
  font-size: 28rpx;
  color: #333;
  min-width: 300rpx;
}

.t-class-confirm {
  color: #fa550f !important;
}

.person-info .order-group__left {
  margin-right: 0;
}
.person-info .t-cell-class {
  height: 112rpx;
}

.phone-bind-button {
  min-width: 220rpx;
}

/* 保存按钮 */
.person-info__save-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  background-color: #fff;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.06);
}
