.user-center-card {
  position: relative;
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box;
  padding-bottom: 24rpx;
}

/* 渐变背景 - 冰蓝薄荷渐变 */
.uc-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, #6bbfa8 0%, #8fd3be 30%, #b5e3d6 55%, #ddf0eb 80%, #f5f5f5 100%);
  z-index: -1;
}

.uc-status-bar {
  width: 100%;
}

/* 头部用户信息 */
.uc-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0 28rpx;
}

.uc-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  flex-shrink: 0;
  background-color: #eee;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.uc-info {
  flex: 1;
  margin-left: 24rpx;
  overflow: hidden;
}

.uc-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 56rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.uc-desc {
  font-size: 26rpx;
  color: #888;
  margin-top: 6rpx;
}

.uc-level {
  display: inline-flex;
  align-items: center;
  margin-top: 8rpx;
  background: linear-gradient(90deg, #f7ead0 0%, #f0ddb8 100%);
  border-radius: 20rpx;
  padding: 4rpx 16rpx;
}

.uc-level-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.uc-level-text {
  font-size: 22rpx;
  color: #8b6914;
  line-height: 32rpx;
}

/* 资产数据行 - 直接在背景上 */
.uc-assets-row {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 8rpx 24rpx;
}

.uc-asset-item {
  flex: 1;
  text-align: center;
}

.uc-asset-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 56rpx;
}

.uc-asset-value--coupon {
  color: #e64340;
}

.uc-asset-label {
  font-size: 24rpx;
  color: #888;
  margin-top: 4rpx;
  line-height: 32rpx;
}

/* 会员卡条 */
.uc-vip-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
}

.uc-vip-left {
  display: flex;
  align-items: center;
}

.uc-vip-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.uc-vip-text {
  font-size: 28rpx;
  color: #e8d5a3;
  font-weight: 500;
}

.uc-vip-btn {
  font-size: 24rpx;
  color: #1a1a1a;
  background: linear-gradient(90deg, #f7e5b0 0%, #d4b96a 100%);
  border-radius: 24rpx;
  padding: 10rpx 28rpx;
  font-weight: 500;
}
