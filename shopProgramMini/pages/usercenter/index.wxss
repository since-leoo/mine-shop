page {
  background-color: #f5f5f5;
}

.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.content-wrapper {
  padding: 20rpx 24rpx 0;
}

/* 通用 section */
.section {
  margin-bottom: 20rpx;
}

.section-card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #1a1a1a;
}

/* 我的资产 */
.assets-row {
  display: flex;
  align-items: flex-start;
  padding: 16rpx 32rpx 36rpx;
}

.assets-item {
  flex: 1;
  text-align: center;
}

.assets-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #1a1a1a;
  line-height: 56rpx;
}

.assets-value--coupon {
  color: #e64340;
}

.assets-sup {
  font-size: 28rpx;
  color: #e64340;
  vertical-align: super;
  line-height: 1;
}

.assets-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 服务与工具网格 */
.tools-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 12rpx 8rpx 16rpx;
}

.tools-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 28rpx;
}

.tools-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

/* 各工具图标颜色 - 彩色圆形背景 + 白色图标 */
.tools-icon--address {
  background: linear-gradient(135deg, #ffb74d 0%, #ff9800 100%);
}

.tools-icon--coupon {
  background: linear-gradient(135deg, #ef5350 0%, #e53935 100%);
}

.tools-icon--point {
  background: linear-gradient(135deg, #66bb6a 0%, #43a047 100%);
}

.tools-icon--help-center {
  background: linear-gradient(135deg, #42a5f5 0%, #1e88e5 100%);
}

.tools-icon--service {
  background: linear-gradient(135deg, #ab47bc 0%, #8e24aa 100%);
}

.tools-item-title {
  font-size: 24rpx;
  color: #666;
  line-height: 32rpx;
}

/* 版本号 */
.footer__version {
  text-align: center;
  padding: 40rpx 0 60rpx;
  color: #ccc;
  font-size: 24rpx;
  line-height: 32rpx;
}

/* 客服弹窗 */
.popup-content {
  background: #f5f5f5;
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: 16rpx 16rpx 0 0;
}

.popup-title {
  background: #fff;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 112rpx;
  line-height: 112rpx;
  border-radius: 16rpx 16rpx 0 0;
  position: relative;
}

.popup-title::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
}

.popup-phone {
  background: #fff;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  position: relative;
  border: none;
  line-height: 100rpx;
  padding: 0;
}

.popup-phone::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1rpx;
  background-color: #e5e5e5;
}

.popup-phone--online {
  margin-bottom: 16rpx;
}

.popup-phone--online::after {
  content: none;
}

.popup-close {
  background: #fff;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  margin-top: 16rpx;
}
